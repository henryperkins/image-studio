# Azure OpenAI Configuration
# Get these from Azure Portal > Your OpenAI Resource > Keys and Endpoint
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
AZURE_OPENAI_API_KEY=your-32-character-api-key-here

# Optional: Use auth token instead of API key
# AZURE_OPENAI_AUTH_TOKEN=your-auth-token-here

# Deployment Names
# These are the deployment names you created in Azure OpenAI Studio
AZURE_OPENAI_IMAGE_DEPLOYMENT=gpt-image-1
AZURE_OPENAI_IMAGE_BASE=dall-e-3
AZURE_OPENAI_VIDEO_DEPLOYMENT=sora-deployment
AZURE_OPENAI_VISION_DEPLOYMENT=gpt-4-vision

# API Versions
# Use "preview" for latest preview features
AZURE_OPENAI_API_VERSION=preview
AZURE_OPENAI_CHAT_API_VERSION=2025-04-01-preview

# Server Configuration
PORT=8787

# CORS Configuration
# For production, set this to your domain
# For development, use http://localhost:5174
CORS_ORIGIN=https://studio.lakefrontdigital.io

# Optional: Azure Content Safety
# For content moderation (recommended for production)
# AZURE_CONTENT_SAFETY_ENDPOINT=https://your-content-safety.cognitiveservices.azure.com
# AZURE_CONTENT_SAFETY_KEY=your-content-safety-key

# Optional: Moderation Settings
# MODERATION_STRICT=true
# MODERATION_FAIL_OPEN=false

# Optional: Seed for deterministic outputs (if supported by model)
# AZURE_OPENAI_SEED=12345