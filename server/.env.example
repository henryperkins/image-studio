# --- Required ---
AZURE_OPENAI_ENDPOINT=https://<your-resource>.openai.azure.com

# For images: you must deploy gpt-image-1 and set its deployment name
AZURE_OPENAI_IMAGE_DEPLOYMENT=gpt-image-1-deployment
AZURE_OPENAI_IMAGE_API_VERSION=2025-04-01-preview

# For Sora (preview v1 surface): docs show api-version=preview
AZURE_OPENAI_API_VERSION=preview

# Auth: use either API key OR Entra ID (Bearer). If both set, API key wins.
AZURE_OPENAI_API_KEY=xxxxxxxxxxxxxxxx

# Vision (GPT-4.1 or any vision-capable chat model you deployed)
AZURE_OPENAI_VISION_DEPLOYMENT=gpt-4.1-deployment
AZURE_OPENAI_CHAT_API_VERSION=2024-02-15-preview

# --- Server ---
PORT=8787
CORS_ORIGIN=http://localhost:5173